{
  "tasks": {
    "mod": "deno run -A src/mod.ts",
    "path": "deno run -A src/path.ts"
  },
  "compilerOptions": {
    "lib": ["deno.ns", "ESNext", "deno.window"]
  },
  "fmt": {
    "options": {
      "indentWidth": 2,
      "useTabs": false,
      "singleQuote": true
    },
    "files": {
      "include": ["src", "examples"],
      "exclude": ["node_modules"]
    }
  }
}
