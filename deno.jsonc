{
  "tasks": {
    "bin-dry": "deno run --allow-env --allow-read src/bin.ts -b=./examples/repo/src -c=./examples/repo/tsconfig.json -d",
    "bin": "deno run --allow-env --allow-read --allow-wright src/bin.ts -b=./examples/repo/src -c=./examples/repo/tsconfig.json"
  },
  "compilerOptions": {
    "lib": ["deno.ns", "ESNext", "deno.window"]
  },
  "fmt": {
    "options": {
      "indentWidth": 2,
      "useTabs": false,
      "singleQuote": true
    },
    "files": {
      "include": ["src", "examples"],
      "exclude": ["node_modules"]
    }
  }
}
